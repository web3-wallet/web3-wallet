{
  "name": "@web3-wallet/defiwallet",
  "description": "DeFiWallet connector",
  "version": "1.1.2",
  "keywords": [
    "web3-wallet",
    "crypto.com DeFi Wallet"
  ],
  "author": "logan <logan.luo@crypto.com>",
