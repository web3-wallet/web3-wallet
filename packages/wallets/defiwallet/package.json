  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web3-wallet/web3-wallet.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/web3-wallet/web3-wallet/issues"
  },
